  "version": "2.0.0",
  "configurations": [
    {
      "type": "python",
      "request": "launch",
      "name": "Python: Run Nezuko",
      "program": "${workspaceFolder}/main.py",
      "cwd": "${workspaceRoot}",
      "autoReload": {
        "enable": true,
        "include": ["**/*.py"],
        "exclude": [
          "**/.git/**",
          "**/__pycache__/**",
          "**/node_modules/**",
          "**/.metadata/**",
          "**/site-packages/**"
        ]
      }
    }
  ]
}
